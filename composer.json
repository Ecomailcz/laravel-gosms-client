{
    "name": "ecomailcz/laravel-gosms",
    "description": "Laravel package for GoSms.cz API client",
    "license": [
        "MIT"
    ],
    "type": "library",
    "keywords": [
        "laravel",
        "gosms",
        "sms",
        "api",
        "client"
    ],
    "authors": [
        {
            "name": "Ecomail.cz",
            "email": "info@ecomail.cz"
        }
    ],
    "require": {
        "php": "^8.4|^8.5",
        "giggsey/libphonenumber-for-php-lite": "^8.13.29 || ^9.0.23",
        "guzzlehttp/guzzle": "^7.10.0",
        "illuminate/support": "^9.0 || ^10.0 || ^11.0",
        "spatie/laravel-data": "^4.19.1"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.49.0",
        "laravel/pint": "^1.27.0",
        "orchestra/testbench": "^7.0 || ^8.37",
        "pekral/cursor-rules": ">=0.3",
        "pekral/phpcs-rules": "^0.4.6",
        "pekral/phpstan-rules": "^0.4.5",
        "pekral/rector-rules": "^0.4.7",
        "pestphp/pest": ">=2.36.1",
        "pestphp/pest-plugin-laravel": ">=2.4",
        "phpstan/phpstan-deprecation-rules": ">=2.0.3",
        "phpstan/phpstan-phpunit": "^2.0.12",
        "phpunit/phpunit": "^10.5.63",
        "roave/security-advisories": "dev-latest"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "EcomailGoSms\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EcomailGoSms\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true,
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        },
        "bump-after-update": true,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "aliases": {
                "GoSms": "EcomailGoSms\\Laravel\\GoSmsFacade"
            },
            "providers": [
                "EcomailGoSms\\Laravel\\GoSmsServiceProvider"
            ]
        }
    },
    "scripts": {
        "analyse": [
            "echo \"ğŸ” Running PHPStan static analysis...\"",
            "vendor/bin/phpstan analyse --memory-limit=2G"
        ],
        "build": [
            "echo \"Building package...\"",
            "composer cursor-rules-refresh && composer fix && composer check"
        ],
        "check": [
            "echo \"ğŸš€ Running full quality check...\"",
            "@normalize-check",
            "@phpcs-check",
            "@pint-check",
            "@rector-check",
            "@analyse",
            "@security-audit",
            "@coverage",
            "echo \"âœ… All checks completed!\""
        ],
        "coverage": [
            "echo \"ğŸ“Š Running code coverage analysis...\"",
            "@test:coverage"
        ],
        "cursor-rules-refresh": [
            "echo \"Refresh cursor rules...\"",
            "vendor/bin/cursor-rules install --force"
        ],
        "fix": [
            "echo \"ğŸ”§ Running all fixes...\"",
            "@normalize-fix",
            "@rector-fix",
            "@pint-fix",
            "@phpcs-fix",
            "echo \"âœ… All fixes completed!\""
        ],
        "normalize-check": [
            "echo \"ğŸ“ Checking Composer normalize...\"",
            "composer normalize --dry-run"
        ],
        "normalize-fix": [
            "echo \"ğŸ“ Running Composer normalize fix...\"",
            "composer normalize"
        ],
        "phpcs-check": [
            "echo \"âœ… Running PHP CodeSniffer check...\"",
            "vendor/bin/phpcs --standard=ruleset.xml src/ tests/"
        ],
        "phpcs-fix": [
            "echo \"ğŸ”§ Running PHP CodeSniffer fix...\"",
            "vendor/bin/phpcbf --standard=ruleset.xml src/ tests/ || true"
        ],
        "pint-check": [
            "echo \"ğŸ¨ Running Laravel Pint check...\"",
            "vendor/bin/pint src/ tests/ --test"
        ],
        "pint-fix": [
            "echo \"ğŸ¨ Running Laravel Pint fixes...\"",
            "vendor/bin/pint src/ tests/"
        ],
        "rector-check": [
            "echo \"ğŸ”„ Running Rector check (dry-run)...\"",
            "vendor/bin/rector process --dry-run"
        ],
        "rector-fix": [
            "echo \"ğŸ”„ Running Rector fixes...\"",
            "vendor/bin/rector process"
        ],
        "security-audit": [
            "echo \"ğŸ”’ Running Composer security audit...\"",
            "composer audit --format=summary"
        ],
        "test": [
            "echo \"ğŸ§ª Running tests...\"",
            "vendor/bin/pest --no-coverage"
        ],
        "test:coverage": [
            "echo \"ğŸ“Š Running coverage tests with 100% minimum...\"",
            "php -dpcov.enabled=1 -dpcov.directory=src/Laravel/ -dxdebug.mode=off vendor/bin/pest -c phpunit.coverage.xml --coverage --min=100 --coverage-clover=coverage.xml --coverage-html=coverage-html --coverage-text"
        ]
    }
}
