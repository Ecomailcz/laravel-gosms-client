{
    "name": "ecomailcz/laravel-gosms-client",
    "description": "Laravel package for GoSms.cz API client",
    "license": [
        "MIT"
    ],
    "type": "library",
    "keywords": [
        "Laravel",
        "gosms",
        "sms",
        "api",
        "client"
    ],
    "authors": [
        {
            "name": "Petr KrÃ¡l",
            "email": "kral.petr.88@gmail.com",
            "homepage": "https://github.com/pekral"
        },
        {
            "name": "Ecomail.cz",
            "email": "petr@ecomail.cz"
        }
    ],
    "homepage": "https://github.com/Ecomailcz/laravel-gosms-client",
    "support": {
        "issues": "https://github.com/Ecomailcz/laravel-gosms-client/issues",
        "source": "https://github.com/Ecomailcz/laravel-gosms-client"
    },
    "require": {
        "php": "^8.4",
        "giggsey/libphonenumber-for-php-lite": "^8.13.29 || ^9.0.23",
        "guzzlehttp/guzzle": "^7.10.0",
        "illuminate/support": "^12.0",
        "spatie/laravel-data": "^4.19.1"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.50.0",
        "laravel/pint": "^1.27.1",
        "orchestra/testbench": "^10.9",
        "pekral/cursor-rules": "^0.3.1",
        "pekral/phpcs-rules": "^0.4.6",
        "pekral/phpstan-rules": "^0.4.5",
        "pekral/rector-rules": "^0.4.7",
        "pestphp/pest": "^4.3.2",
        "pestphp/pest-plugin-laravel": "^4",
        "phpstan/phpstan-deprecation-rules": ">=2.0.3",
        "phpstan/phpstan-mockery": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0.14",
        "roave/security-advisories": "dev-latest"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "EcomailGoSms\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EcomailGoSms\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true,
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        },
        "bump-after-update": true,
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "aliases": {
                "GoSms": "EcomailGoSms\\Laravel\\GoSmsFacade"
            },
            "providers": [
                "EcomailGoSms\\Laravel\\GoSmsServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-update-cmd": [
            "@composer outdated -D"
        ],
        "analyse": "vendor/bin/phpstan analyse --memory-limit=2G",
        "build": "composer cursor-rules-refresh && composer fix && composer check",
        "check": "composer run composer-normalize-check && composer run phpcs-check && composer run pint-check && composer run rector-check && composer run analyse && composer run security-audit && composer run test:coverage",
        "composer-normalize-check": "@composer normalize --dry-run",
        "composer-normalize-fix": "@composer normalize",
        "composer-validate": "composer validate --strict",
        "cursor-rules-refresh": "vendor/bin/cursor-rules install --force",
        "fix": "composer run composer-normalize-fix && composer run rector-fix && composer run pint-fix && composer run phpcs-fix || true",
        "phpcs-check": "vendor/bin/phpcs --standard=ruleset.xml src/ tests/ examples/",
        "phpcs-fix": "vendor/bin/phpcbf --standard=ruleset.xml src/ tests/ examples/ || true",
        "pint-check": "vendor/bin/pint src/ tests/ examples/ --test --parallel",
        "pint-fix": "vendor/bin/pint src/ tests/ examples/ --parallel",
        "rector-check": "vendor/bin/rector process --dry-run",
        "rector-fix": "vendor/bin/rector process",
        "security-audit": "composer audit",
        "test": "vendor/bin/pest --no-coverage",
        "test:coverage": "php -dpcov.enabled=1 -dpcov.directory=. -dxdebug.mode=off -dpcov.exclude=\"~vendor~\" vendor/bin/pest --coverage --min=100",
        "xml-lint": "find . -name '*.xml' ! -path './vendor/*' -exec xmllint --noout {} \\;"
    }
}
